<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PoClient">
    
    <Style TargetType="Button" x:Key="Button_Default">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="22"/>
    </Style>

    <Style TargetType ="ListBox" x:Key="ListBox_Default">
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style TargetType ="TextBox" x:Key="TextBox_Default">
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style TargetType ="TextBlock" x:Key="TextBlock_Default">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    
    <Style TargetType ="TextBlock" x:Key="TextBlock_Footer" BasedOn="{StaticResource TextBlock_Default}">
        <Setter Property="FontSize" Value="12"/>
    </Style>
</ResourceDictionary>